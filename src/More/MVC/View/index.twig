{% block title %}Hello IndexController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .posts ul {
            display: flex;
            flex-wrap: wrap;
            padding-left: 0;
        }

        .posts ul li {
            list-style: none;
            flex: 0 0 33.333333%;
        }

        .posts ul li img {
            width: 200px;
            height: 200px;
        }

        .posts ul a {
            text-decoration: none;
            color: unset;
        }
    </style>

    <div class="example-wrapper">
        <div class="posts">
            <ul>
                {% for posts in post %}
                    <li>
                        <a href="detail/{{ posts.id }}">
                            <img src="{{ asset('/uploads/images/pizza/') ~ posts.imageName }}" alt="img-pizza">
                            <h4>{{ posts.title }}</h4>
                            <p>{{ posts.description | raw }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="navigation">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>
{% endblock %}
